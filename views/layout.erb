            <label for="inp-salary-date">Datum:</label>
            <input type="text" id="inp-salary-date" class="date" name="date">
            <i class="info">i</i>
          </div>
          <input name="payment_type" type="hidden" value="salary" />
          <button type="submit" class="btn-add"><i class="icon">c</i> Spara löneuttag</button>
        </form>
      </article>

      <!-- Settings: -->
      <article class="content" id="view-settings">
