    <nav>
      <ul id="app-nav">
        <li class="item"><a href="in" class="link" id="btn-in" data-title="Intäkt" data-key="74">+</a></li>
        <li class="item"><a href="out" class="link" id="btn-out" data-title="Utgift" data-key="75">–</a></li>
        <li class="item"><a href="salary" class="link" id="btn-salary" data-title="Löneuttag" data-key="76">–</a></li>
        <li class="item"><a href="" class="link" id="btn-book" data-title="Bokföring" data-key="186">=</a></li>
        <li class="item"><a href="settings" class="link icon" id="btn-settings" data-title="Inställningar" data-key="83">s</a></li>
        <li class="item"><a href="" class="link icon" id="btn-logout" data-key="81">q</a></li>
      </ul>
    </nav>

    <div id="main-content" class="">

      <article class="content active" id="view-book">
          <ul class="column">
            <li class="number-item">
              <strong class="important">Överskott:</strong>
              <span class="number number-result" id="data-surplus">147 250</span>
            </li>
            <li class="number-item">
              <strong>Intäkter:</strong>
              <span class="number" id="data-in">187 250</span>
            </li>
            <li class="number-item">
              <strong>Utgifter:</strong>
              <span class="number" id="data-out">40 000</span>
            </li>
          </ul>
          <div class="column">
              <strong class="important">Moms överskott:</strong>
              <span class="number-result" id="data-vat-result">61 580</span>
          </div>
      </article>

      <!-- Payin: -->
      <article class="content" id="view-in">
        <form action="/payments" method="post">
          <div class="wrap-inp">
            <label for="inp-in-title">Titel:</label>
            <input type="text" id="inp-in-title" name="title" class="shrink" placeholder="Faktura 20: Kundnamn">
            <i class="info">i</i>
          </div>
          <div class="wrap-inp">
            <label for="inp-in-sum">Belopp:</label>
            <input type="text" id="inp-in-sum" name="sum" placeholder="5200 (ex moms)">
            <i class="info">i</i>
          </div>
          <div class="wrap-inp">
            <label for="inp-in-vat">Moms %:</label>
            <ul class="vat-list">
              <li class="vat checked">25
                <input type="radio" checked name="vat" value="25">
              </li>
              <li class="vat">12
                <input type="radio" name="vat" value="6">
              </li>
              <li class="vat">6
                <input type="radio" name="vat" value="6">
              </li>
              <li class="vat">0
                <input type="radio" name="vat" value="0">
              </li>
            </ul>
          </div>
          <div class="wrap-inp">
            <label for="inp-in-date">Datum:</label>
            <input type="text" id="inp-in-date" class="date" name="date">
            <i class="info">i</i>
          </div>
          <input name="payment_type" type="hidden" value="ingoing" />
          <button type="submit" class="btn-add"><i class="icon">c</i> Spara intäkt</button>
        </form>
      </article>

      <!-- Payout: -->
      <article class="content" id="view-out">
        <form action="/payments" method="post">
          <div class="wrap-inp">
            <label for="inp-out-title">Titel:</label>
            <input type="text" id="inp-out-title" class="shrink" placeholder="Bokköp: The Manual" name="title">
            <i class="info">i</i>
          </div>
          <div class="wrap-inp">
            <label for="inp-out-sum">Belopp:</label>
            <input type="text" id="inp-out-sum" placeholder="290 (ex moms)" name="sum">
            <i class="info">i</i>
          </div>
          <div class="wrap-inp">
            <label for="inp-in-vat">Moms %:</label>
            <ul class="vat-list">
              <li class="vat checked">25
