<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Bok</title>

  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- CSS concatenated and minified via ant build script-->
  <link rel="stylesheet" href="css/style.css">
  <!-- end CSS-->

  <script src="js/libs/modernizr-2.0.6.min.js"></script>
</head>
<body>


  <div class="container active" id="site">
    <header id="page-header">
      <!-- Logo and description: -->
      <strong id="logo"><a href="overview" class="link">Bok</a></strong>
      <h1>Det första lätta bokföringsappet tja lol</h1>
    </header>

    <!-- Login form: -->
    <% unless(@logged_in == true) %>
    <section id="logout">
      <a href="logout" class="link" id="btn-logout">Logga ut</a>
    </section>
    <% else %>
    <section id="login">
      <form action="/login" method="post">
        <fieldset>logga in</fieldset>
        <div class="wrap-inp">
          <label for="inp-email">E-post</label>
          <input type="email" id="inp-email" name="email" value="test@example.com">
        </div>
        <div class="wrap-inp">
          <label for="inp-email">Lösenord</label>
          <input type="password" id="inp-password" name="password">
        </div>
        <input type="submit" value="Logga in" id="btn-login" class="btn-add">
      </form>
    </section>
    <% end %>
  </div>

  <div class="container" id="app">
    <!-- Main app navigation: -->
    <nav>
      <ul id="app-nav">
        <li class="item"><a href="in" class="link" id="btn-in">Inkomst</a></li>
        <li class="item"><a href="out" class="link" id="btn-out">Utgift</a></li>
        <li class="item"><a href="salary" class="link" id="btn-salary">Löne uttag</a></li>
        <li class="item"><a href="book" class="link" id="btn-book">Bokföring</a></li>
        <li class="item secondary"><a href="settings" class="link" id="btn-settings">Inställningar</a></li>
        <li class="item secondary"><a href="/logout" class="link transfer" id="btn-logout">Logga ut</a></li>
      </ul>
    </nav>

    <!-- App views: -->

    <article class="content" id="view-overview">
      <section>
        <h3>Överblick</h3>

        <ul class="column">
          <li class="number-item">
            <strong class="important">Överskott:</strong>
            <span class="number number-result" id="data-surplus">147 250</span>
          </li>
          <li class="number-item">
            <strong>Inkomster:</strong>
            <span class="number" id="data-in">187 250</span>
          </li>
          <li class="number-item">
            <strong>Utgifter:</strong>
            <span class="number" id="data-out">40 000</span>
          </li>
        </ul>

        <div class="column">
            <strong class="important">Moms överskott:</strong>
            <span class="number-result" id="data-vat-result">61 580</span>
        </div>
      </section>

      <section class="widget">
        <h4>Senaste händelser</h4>
        <ul class="events">
          <li class="event">
            <span class="data-sum">1000</span>
            <strong class="data-title">Bokköp: The Manual</strong>
            <i class="data-nr">42</i>
          </li>
          <li class="event">
            <span class="data-sum">10 000</span>
            <strong class="data-title">Bokköp: The Manual</strong>
            <i class="data-nr">41</i>
          </li>
          <li class="event">
            <span class="data-sum">100</span>
            <strong class="data-title">Bokköp: The Manual</strong>
            <i class="data-nr">40</i>
          </li>
        </ul>
      </section>
    </article>

    <article class="content" id="view-in">
      <h3>Inkomst</h3>
      <section>
        <h4>Addera en inkomst</h4>
        <form action="/payments" method="post">
          <div class="wrap-inp">
            <label for="inp-in-title">Titel</label>
            <input type="text" id="inp-in-title" name="title" placeholder="En bok">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-in-sum">Summa</label>
            <input type="text" id="inp-in-sum" name="sum" placeholder="123">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-in-vat">Moms</label>
            <input type="text" id="inp-in-vat" name="vat" placeholder="25">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-in-date">Datum</label>
            <input type="date" id="inp-in-date" date="date" name="date" placeholder="<%= @time %>">
            <a href="" class="info"></a>
          </div>
          <input name="payout_type" type="hidden" value="0" />
          <input type="submit" value="Addera" class="btn-add">
        </form>
      </section>
    </article>

    <article class="content" id="view-out">
      <h3>Utgift</h3>
      <section>
        <h4>Addera en utgift</h4>
        <form action="">
          <div class="wrap-inp">
            <label for="inp-out-title">Titel</label>
            <input type="text" id="inp-out-title">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-out-sum">Summa</label>
            <input type="text" id="inp-out-sum">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-out-vat">Moms</label>
            <input type="text" id="inp-out-vat">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-out-date">Datum</label>
            <input type="date" id="inp-out-date">
            <a href="" class="info"></a>
          </div>
          <input type="submit" value="Addera" class="btn-add">
        </form>
      </section>
    </article>

    <article class="content" id="view-salary">
      <h3>Löneuttag</h3>
      <section>
        <h4>Lägg till ett löneuttag</h4>
        <form action="">
          <div class="wrap-inp">
            <label for="inp-out-title">Titel</label>
            <input type="text" id="inp-out-title">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-out-sum">Summa</label>
            <input type="text" id="inp-out-sum">
            <a href="" class="info"></a>
          </div>
          <div class="wrap-inp">
            <label for="inp-out-date">Datum</label>
            <input type="date" id="inp-out-date">
            <a href="" class="info"></a>
          </div>
          <input type="submit" value="Addera" class="btn-add">
        </form>
      </section>
    </article>

    <article class="content" id="view-book">
      <h3>Bokföring</h3>
    </article>

    <article class="content" id="view-settings">
      <h3>Inställningar</h3>
    </article>
  </div>



  <footer>
    <!-- About us: -->
    <a href="" id="info">i</a>
    <a href="#" class="link transfer">Change main view</a>
  </footer>


